{
	"name": "racket-repl",
	"displayName": "racket-repl",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.81.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onCommand:racket-repl.helloWorld",
		"onLanguage:racket"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "racket-repl.run",
				"title": "Run file in REPL",
				"icon": {
					"light": "./icons/light/start (1).svg",
					"dark": "./icons/dark/start.svg"
				}
			},
			{
				"command": "racket-repl.stop",
				"title": "Stop REPL",
				"icon": {
					"light": "./icons/light/stop (1).svg",
					"dark": "./icons/dark/stop.svg"
				}
			},
			{
				"command": "racket-repl.runSelectionInREPL",
				"title": "Run Selection"
			},
			{
				"command": "racket-repl.loadFileInREPL",
				"title": "Load file in REPL"
			},
			{
				"command": "racket-repl.runFileInTerminal",
				"title": "Run file in Terminal"
			}
		],
		"keybindings": [
			{
				"command": "racket-repl.run",
				"key": "ctrl+r ctrl+r",
				"mac": "cmd+r cmd+r",
				"when": "editorTextFocus && editorLangId == racket"
			}
		],
		"languages": [
			{
				"id": "racket",
				"aliases": [
					"Racket",
					"racket"
				],
				"extensions": [
					".rkt"
				]
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorLangId == racket && config.racket-repl.showRunCommandInEditorContextMenu",
					"command": "racket-repl.run",
					"group": "navigation"
				},
				{
					"when": "editorLangId == racket && config.racket-repl.showStopCommandInEditorContextMenu",
					"command": "racket-repl.stop",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Racket REPL configuration",
			"properties": {
				"racket-repl.showRunCommandInEditorContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show 'Run Code' icon in editor title menu.",
					"scope": "resource"
				},
				"racket-repl.showStopCommandInEditorContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether to show 'Stop Code' icon in editor title menu.",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test2": "npm run compile && node ./node_modules/vscode/bin/test",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.53",
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.47.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"typescript": "^5.1.6"
	},
	"dependencies": {
		"os": "^0.1.2",
		"path": "^0.12.7",
		"tree-kill": "^1.2.2"
	}
}
